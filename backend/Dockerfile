 FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including dev dependencies like nodemon)
# RUN npm install
RUN npm ci --only=production

# Copy source code
COPY . .

# Copy .env file
COPY .env .env


# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD node healthcheck.js || exit 1

# Start command
CMD ["npm", "run", "dev"]